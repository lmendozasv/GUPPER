<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#80ffffff"
    android:id="@+id/root"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="devlasolutions.com.gup.MainActivity"
    tools:showIn="@layout/app_bar_main"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    >
    <TextView
        android:id="@+id/headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:id="@+id/barrabusqueda"
        >
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:padding="5dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:hint="¿Qué es lo que buscas?"
            android:paddingStart="50dip"
            android:singleLine="true"
            android:paddingEnd="35dip"
            android:background="@drawable/rounded"
            android:layout_marginBottom="6dip"
            android:id="@+id/editText2" />
        <ImageButton
            android:id="@+id/buttone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_location"
            android:background="@android:color/transparent"
            android:text="Button"

            android:scaleType="fitCenter"

            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_alignBottom="@+id/buttone12"
            android:layout_alignTop="@+id/buttone12" />


        <ImageButton
            android:id="@+id/buttone12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"

            android:background="@android:color/transparent"
            android:text="Button"
            android:layout_alignTop="@+id/editText2"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"

            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"

            android:layout_marginLeft="15dip"

            android:layout_alignBottom="@+id/editText2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="1dip"
        android:background="#ffffff"
        android:layout_below="@+id/barrabusqueda"
        app:elevation="10dp"
        android:layout_alignParentStart="true"
        />
    <View android:id="@+id/separator"
        android:background="#01579B"
        android:layout_width = "fill_parent"
        android:layout_height="1.5dip"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignEnd="@+id/separatosr"
        android:layout_below="@+id/barrabusqueda" />

    <View android:id="@+id/separatosr"
        android:background="#FF5430"
        android:layout_width = "fill_parent"
        android:layout_height="1.5dip"
        android:layout_marginLeft="50dip"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/barrabusqueda" />
    <View android:id="@+id/sepasratosr"
        android:background="#BCED10"
        android:layout_width = "fill_parent"
        android:layout_height="1.5dip"
        android:layout_marginLeft="80dip"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/barrabusqueda"
        android:layout_alignEnd="@+id/separatosr" >
    </View>
    <View android:id="@+id/sepasratossr"
        android:background="#F7C000"
        android:layout_width = "fill_parent"
        android:layout_height="1.5dip"
        android:layout_marginLeft="120dip"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/barrabusqueda"
        />
    <Button
        android:id="@+id/slider2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/slider"
        android:paddingTop="40dip"
        android:text="Reportar precios"
        android:textColor="#BF360C"
        android:background="@drawable/btn_home_back_1"

        android:layout_alignParentStart="true"
        />
    <Button
        android:id="@+id/slider3"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/slider2"
        android:layout_alignParentStart="true"
        android:text="Revisar reportes"
        android:paddingTop="50dip"
        android:paddingBottom="70dip"
        android:textColor="#212121"
        android:background="@drawable/btn_home_back_2"
        android:layout_marginRight="1dip"
        android:layout_marginTop="1dip"

        android:layout_toStartOf="@+id/headline"
        android:layout_above="@+id/adView" />

    <Button
        android:id="@+id/slider4"
        android:layout_marginTop="1dip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Premios"
        android:elevation="10dip"
        android:paddingTop="50dip"
        android:paddingBottom="70dip"
        android:textColor="#1B5E20"
        android:background="@drawable/btn_home_back_3"
        android:layout_below="@+id/slider2"
        android:layout_toEndOf="@+id/headline"
        android:layout_above="@+id/adView" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_home_footer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

    </com.google.android.gms.ads.AdView>
</RelativeLayout>
