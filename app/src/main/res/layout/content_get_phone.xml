<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_get_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="devlasolutions.com.gup.getPhoneActivity"
    tools:showIn="@layout/activity_get_phone">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/telstring"
        fontPath="fonts/hm.ttf"

        android:textAlignment="center"
        android:id="@+id/textView2"

        android:textColor="#424242"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/imgLogo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"

        android:textSize="30dip"

        android:layout_below="@+id/textView2"
        android:hint="Número móvil"
        android:gravity="center"
        android:maxLength="8"
        android:layout_marginTop="85dp"
        android:id="@+id/etphone"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etphone"
        android:layout_marginTop="19dp"
        android:id="@+id/btnenviarphone"
        android:layout_alignStart="@+id/etphone"
        android:layout_alignEnd="@+id/etphone" />


</RelativeLayout>
